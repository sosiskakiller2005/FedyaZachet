<Page x:Class="FedyaZachet.View.Pages.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FedyaZachet.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Название"/>
        <TextBox Name="NameTb" Grid.Column="1"/>
        <TextBlock Text="Категория" Grid.Row="1"/>
        <ComboBox Name="CategoryCmb" Grid.Row="1" Grid.Column="1"/>
        <TextBlock Text="Количество" Grid.Row="2"/>
        <TextBox Name="AmountTB" Grid.Column="1" Grid.Row="2"/>
        <TextBlock Text="Цена" Grid.Row="3"/>
        <TextBox Name="PriceTb" Grid.Column="1" Grid.Row="3"/>
        <Button Name="AddBtn" Content="Добавить" Click="AddBtn_Click" Grid.Row="4"/>
    </Grid>
</Page>
